<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rlyHeaderImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"></FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/header_cover_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:fitsSystemWindows="true"
                            android:src="@drawable/logo_white" />
                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="225dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="7dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profile_cv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            app:cardBackgroundColor="#fff"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="2dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/empfirstname_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MOM Team"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/dp_18"
                                        android:textStyle="bold"
                                        android:typeface="serif" />


                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/empcode_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:text="(GTL-236)"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/small_txt"
                                    android:typeface="serif"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/empdegination_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:text="Android Developer"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/small_txt"
                                    android:typeface="serif"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/empmail_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    android:layout_marginTop="15dp"
                                    android:text="chef.query@motheronmission.com"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/small_txt"
                                    android:typeface="serif" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:visibility="gone"
                                    android:text="jet.query@motheronmission.com"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/small_txt"
                                    android:typeface="serif" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:text="mom.query@motheronmission.com"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/small_txt"
                                    android:typeface="serif" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/mobile_ic"
                                        android:layout_width="30dp"
                                        android:layout_height="@dimen/dp_15"
                                        android:src="@drawable/email"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/contactinfo_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_gravity="center"
                                        android:layout_toRightOf="@+id/mobile_ic"
                                        android:text="9506228028"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/small_txt"
                                        android:typeface="serif"
                                        android:visibility="gone" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/calluser_iv"
                                        android:layout_width="@dimen/dp_40"
                                        android:layout_height="@dimen/dp_30"
                                        android:layout_margin="20dp"
                                        android:clickable="true"
                                        android:src="@drawable/call_nav"
                                        android:visibility="gone" />


                                    <ImageView
                                        android:id="@+id/addcontact_iv"
                                        android:layout_width="@dimen/dp_30"
                                        android:layout_height="@dimen/dp_40"
                                        android:layout_margin="20dp"
                                        android:clickable="true"
                                        android:src="@drawable/ic_contact"
                                        android:visibility="gone" />


                                    <ImageView
                                        android:id="@+id/sendmessage_tv"
                                        android:layout_width="@dimen/dp_40"
                                        android:layout_height="@dimen/dp_40"
                                        android:clickable="true"
                                        android:padding="@dimen/dp_6"
                                        android:src="@drawable/email"
                                        android:tint="@color/green" />


                                    <ImageView
                                        android:id="@+id/whatupsend_tv"
                                        android:layout_width="@dimen/dp_40"
                                        android:layout_height="@dimen/dp_40"
                                        android:clickable="true"
                                        android:src="@drawable/whatsapp" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:padding="@dimen/dp_8"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Registered Office - "
                                        android:textStyle="bold"
                                        android:drawableStart="@drawable/location_icon"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:typeface="serif" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="The Nest, unit no. 205,#8A, HTR Mahalakshmi farms, End of AECS main road, Brookfield, Bangalore"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:textSize="@dimen/small_txt"
                                        android:typeface="serif" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:layout_marginBottom="@dimen/dp_15"
                                    android:padding="@dimen/dp_8"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="MOM Office - "
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:drawableStart="@drawable/location_icon"
                                        android:typeface="serif" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Evoma business centre, Prestige Featherlite tech park, EPIP zone, Whitefield, Bangalore"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:textSize="@dimen/small_txt"
                                        android:typeface="serif" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:layout_marginBottom="@dimen/dp_15"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="@dimen/dp_20"
                                        android:tint="@color/black"
                                        android:src="@drawable/call_nav"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="8249683386, 9008241090"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:textSize="18sp"
                                        android:typeface="serif" />

                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="170dp"
                        android:background="@drawable/profile_bg"
                        android:visibility="gone">


                        <RelativeLayout
                            android:id="@+id/home_user_img_rel"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/profile_bg">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/user" />

                        </RelativeLayout>
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>